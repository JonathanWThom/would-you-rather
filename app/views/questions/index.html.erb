<% @questions.each do |question| %>
  <div class="row">

    <%= form_for [question, @response], remote: true do |f| %>
      <div class="col-md-3">
        <%= image_tag question.photo_1 %>
        <br>
        <div class="remove_checkbox_<%= question.id %>">
          <%= f.label question.option_1 %>
          <%= f.check_box :option_1, {}, true, false %>
        </div>

      </div>
      <div class="col-md-3">
        <% if current_user.questions.include?(question) %>
        <div id="remove_question_<%= question.id %>" class="alignCenter">
          <h3><%= question.content %></h3>
          <%= question.option_1 %>: <%= question.responses.group(:option_1).count.values[1] %>
          <%= question.option_2 %>: <%= question.responses.group(:option_2).count.values[1] %>
        </div>
        <% if question.responses.where(user_id: current_user.id)[0].option_1 %>
          <p>You voted for <%= question.option_1 %></p>
        <% elsif question.responses.where(user_id: current_user.id)[0].option_2 %>
          <p>You voted for <%= question.option_2 %></p>
        <% else %>
          <p>Vote!</p>
        <% end %>
          <div id="edit_button_<%= question.id %>">
            <%= link_to "Edit", edit_question_response_path(question, question.responses.where(user_id: current_user.id)[0]),:class => "btn btn-default", remote: true %>
          </div>
        <div id="user_comment_<%= question.id %>">
        </div>
        <% question.responses.each do |response| %>
          <% if response.comment %>
            <p><%= response.comment %></p>
          <% end %>
        <% end %>
      <% end %>
    </div>

      <div class="col-md-3">
        <%= image_tag question.photo_2 %>
        <br>
        <div class="remove_checkbox_<%= question.id %>">
          <%= f.label question.option_2 %>
          <%= f.check_box :option_2, {}, true, false  %>
        </div>
      </div>
    </div>
      <div class="row remove_checkbox_<%= question.id %>">
        <div class="col-md-4">

        </div>
        <div class="col-md-8">
          <%= f.submit 'Vote' %>
        <% end %>
      </div>
    </div>

    <div id="comment_<%= question.id %>">

    </div>

<% end %>
