<!DOCTYPE html>
<html>
  <head>
    <title>WouldYouRather</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-light bg-faded">
      <%= link_to "Log-in", new_user_session_path %> | <%= link_to "Signup", new_user_registration_path %> | <%= link_to "Log-out", destroy_user_session_path, method: "delete" %>
    </nav>
    <div class="container">
      <%= flash[:notice] %>
      <%= yield %>
    </div>
  </body>
</html>
